rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /messages/{message} {
      allow read: if true;
      allow write: if true;
    }

    match /ducks/{duck} {
      allow read: if true;
      allow write: if true;
    }

    match /posts/{post} {
      allow read: if true;
      allow write: if true;
    }

  }
}
