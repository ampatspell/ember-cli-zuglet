<div class="row">
  <div class="row">{{@message}}</div>
  <div class="row">
    <Input @type="text" @value={{@message.name}} placeholder="name"/>
  </div>
  <div class="row">
    <Input @type="text" @value={{@message.text}} placeholder="text"/>
  </div>
  <div class="row">
    <input type="button" value="Save" {{on "click" this.save}}/>
    <input type="button" value="Delete" {{on "click" this.delete}}/>
  </div>
  <div class="row">
    <Json @value={{@message}}/>
  </div>
</div>