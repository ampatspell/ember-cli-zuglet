<div class="route-index">

  <div class="row">
    <input type="button" value="Toggle" {{on "click" this.toggle}}/>
  </div>

  <div class="row">
    <div>thing: {{this.active}} {{this.active.isActivated}}</div>
    <div>child: {{this.active.child}} {{this.active.child.isActivated}}</div>
  </div>

  <div class="row">
    <div>model: {{this.model}} {{this.model.isActivated}}</div>
    <div>child: {{this.model.child}} {{this.model.child.isActivated}}</div>
  </div>

</div>