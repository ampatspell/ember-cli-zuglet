<div class="route-playground-dev">

  <div class="row">
    <Json @value={{this.doc}}/>
  </div>

  <div class="row">
    <input type="button" {{on "click" this.reload}} value="Reload"/>
  </div>

  <div class="row">
    <Block::Changes as |Changes|>
      <Changes.Property @key="doc" @value={{this.doc}}/>
      <Changes.Property @key="doc.data.name" @value={{this.doc.data.name}}/>
      <Changes.Property @key="doc.data.name.first" @value={{this.doc.data.name.first}}/>
    </Block::Changes>
  </div>

</div>