<div class="route-playground-data">

  <div class="row">
    <Json @value={{this.doc}}/>
  </div>

  <div class="row">
    <Input @type="text" @value={{this.name}} placeholder="name"/>
    <input type="button" value="Save local" {{on "click" this.saveLocal}}/>
    <input type="button" value="Save remote" {{on "click" this.saveRemote}}/>
  </div>

</div>